---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'ex10x - Accelerate Your Productivity with AI',
	description = 'Learn how to use AI and vibe coding to 10x your productivity. Personal sessions available with Chris Fossenier.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="alternate" type="application/rss+xml" title="ex10x Blog" href="/rss.xml" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white text-gray-900 antialiased">
		<Navigation />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
