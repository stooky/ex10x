---
import Layout from '../layouts/Layout.astro';

// Sample video data - you can replace with actual videos
const videos = [
	{
		title: "Getting Started with Vibe Coding",
		description: "Learn the basics of coding with AI assistants and how to set up your workflow for maximum productivity.",
		embedId: "dQw4w9WgXcQ", // Replace with actual YouTube video ID
		duration: "12:34",
	},
	{
		title: "AI Automation for Daily Tasks",
		description: "Discover how to automate repetitive tasks using AI tools and save hours every week.",
		embedId: "dQw4w9WgXcQ", // Replace with actual YouTube video ID
		duration: "18:22",
	},
	{
		title: "Advanced Prompting Techniques",
		description: "Master the art of prompting to get better results from AI assistants consistently.",
		embedId: "dQw4w9WgXcQ", // Replace with actual YouTube video ID
		duration: "15:45",
	},
];
---

<Layout title="Videos - ex10x" description="Watch tutorials and guides on using AI for productivity.">
	<section class="py-20">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<h1 class="text-4xl font-bold text-gray-900 mb-4">Videos</h1>
				<p class="text-lg text-gray-600 max-w-2xl mx-auto">
					Watch tutorials, guides, and deep-dives on using AI to boost your productivity.
				</p>
			</div>

			{videos.length > 0 ? (
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{videos.map((video) => (
						<article class="bg-white rounded-xl overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow">
							<div class="aspect-video bg-gray-100 relative">
								<!-- Replace with actual YouTube embed or thumbnail -->
								<div class="absolute inset-0 flex items-center justify-center">
									<div class="text-center">
										<div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-2">
											<svg class="w-6 h-6 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
												<path d="M8 5v14l11-7z" />
											</svg>
										</div>
										<span class="text-sm text-gray-500">{video.duration}</span>
									</div>
								</div>
								<!-- Uncomment for actual YouTube embed:
								<iframe
									src={`https://www.youtube.com/embed/${video.embedId}`}
									class="absolute inset-0 w-full h-full"
									frameborder="0"
									allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
									allowfullscreen
								></iframe>
								-->
							</div>
							<div class="p-5">
								<h2 class="text-lg font-semibold text-gray-900 mb-2">{video.title}</h2>
								<p class="text-gray-600 text-sm">{video.description}</p>
							</div>
						</article>
					))}
				</div>
			) : (
				<div class="text-center py-16 bg-gray-50 rounded-xl">
					<svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
					</svg>
					<h2 class="text-xl font-semibold text-gray-900 mb-2">Videos coming soon</h2>
					<p class="text-gray-600">Check back for tutorials and guides on AI productivity.</p>
				</div>
			)}

			<div class="mt-16 text-center">
				<div class="bg-gray-50 rounded-xl p-8">
					<h2 class="text-xl font-semibold text-gray-900 mb-2">Want personalized guidance?</h2>
					<p class="text-gray-600 mb-4">
						Book a session for hands-on, tailored instruction.
					</p>
					<a
						href="/book"
						class="inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors"
					>
						Book a Session
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
